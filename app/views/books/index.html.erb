<% if flash[:notice1] %>
     <p id="notice">
       <%= flash[:notice1] %>
     </p>
<% end %>

 <h1>Books</h1>

  <table>
　  <thead>
　    <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
　  </thead>

　  <tbody>

      <% @books.each do |book| %>
        <tr>
          <td><p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p></td>
          <td><a class ="link" href="<%= book_path(book.id) %>"><%= book.title%></a></td>
          <td><%= book.body%></td>

          </tr>
      <% end %>

    </tbody>

  </table>

  <h2>
  New book
  </h2>

  <%= form_with model: @book, url:'/books', method: :post do |f| %>

  <% if @book.errors.any? %>
  <div class="error-box">
    <% if @book.errors.count==2 %>

      <h2 class = "errors">
        2 errors prohibited this book from being saved:
      </h2>
    <% end %>

    <% if @book.errors.count==1 %>
      <h2 class = "error">
      1 error prohibited this book from being saved:
      </h2>
    <% end %>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input">
   <label>Title</label>
    <br>
    <%= f.text_field :title %>

  </div>

  <div class="input">

   <label>Body</label>
   <br>
   <%= f.text_area :body %>

  </div>

  <div class="submit">
    <%= f.submit 'Create Book' %>
  </div>

  <% end %>
