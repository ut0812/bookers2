<div class="col-lg-4">
<div>
  <h2>User info</h2>
  <table class='table'>

  <%= image_tag user.get_profile_image %>
  <tr>
    <th>name</th>
    <th><p><%= user.name %></p></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><p><%= user.introduction %></p></th>
  </tr>

  </table>
<%= link_to edit_user_path(user.id) do %>
        <i class="fas fa-user-cog"></i>
  <% end %>

</div>

<h2>New book</h2>

  <%= form_with model: book, url:'/books', method: :post do |f| %>

  <div class="input">
   <label>Title</label>
    <br>
    <%= f.text_field :title %>

  </div>

  <div class="input">

   <label>Body</label>
   <br>
   <%= f.text_area :body %>

  </div>

  <div class="submit">
    <%= f.submit 'Create Book' %>
  </div>
</div>

  <% end %>