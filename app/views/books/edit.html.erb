<% if @book.errors.any? %>
  <div class="error-box">
    <% if @book.errors.count==2 %>

      <h2 class = "errors">
        2 errors prohibited this book from being saved:
      </h2>
    <% end %>

    <% if @book.errors.count==1 %>
      <h2 class = "error">
      1 error prohibited this book from being saved:
      </h2>
    <% end %>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<div class="top">

  <h1>
    Editing Book
  </h1>

  <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

   <div class="input">
   <label>Title</label>
   <br>
    <%= f.text_field :title %>
  </div>

  <div class="input">
   <label>Body</label>
   <br>
    <%= f.text_area :body %>
  </div>

  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

    <a class ="link" href="<%= book_path(@book.id) %>">Show</a> |
    <a class ="link" href="<%='/books' %>">Back</a>

</div>
</div>