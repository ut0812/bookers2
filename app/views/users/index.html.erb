<% if @book.errors.any? %>
  <div class="error-box">
    <% if @book.errors.count==2 %>

      <h2 class = "errors">
        2 errors prohibited this book from being saved:
      </h2>
    <% end %>

    <% if @book.errors.count==1 %>
      <h2 class = "error">
      1 error prohibited this book from being saved:
      </h2>
    <% end %>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class='container px-5 px-sm-0'>
<div class="row">
<%= render 'books/list', user: @user, book: @book %>
<div class='col-md-8 offset-md-1'>
  <br>
<h1>Users</h1>

  <table class="table table-striped">
　  <thead>
　    <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
　  </thead>

　  <tbody>

      <% @users.each do |user| %>
        <tr>
          <td><p><%= image_tag user.get_profile_image %></p></td>
          <td><%= user.name%></td>
          <td><%=link_to "Show",user_path(user.id) %></td>

          </tr>
      <% end %>

    </tbody>

  </table>
   </div>
  </div>
  </div>
